<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_place_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.simeon_dee.offagisapp.PlacePickerActivity">

    <Button
        android:text="Pick a Place on the Map to Get Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/bPickPlace"
        android:onClick="onClickPickPlaceButtonHandler" />

    <TextView
        android:id="@+id/tvDisplayDetails"
        android:text="Details here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bPickPlace"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="131dp"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"
        android:inputType="textMultiLine"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/powered_by_google_light"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Show Dialog List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bTestDialog"
        android:onClick="onShowDialogButtonHandler"
        android:layout_below="@+id/bPickPlace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />
</RelativeLayout>
